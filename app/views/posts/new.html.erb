<head>
  <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false&libraries=places"></script>
</head>

<script type="text/javascript">
  function initialize() {

  var input = document.getElementById('address');
  var autocomplete = new google.maps.places.Autocomplete(input);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>

<div class="wpc-contactUs-form wpc-contactUs-form-style3">
  <div class="row">
    <div class="col-xs-12">
      <h1>create a new post!</h1>
    </div>
  </div>

<%= form_tag '/posts', method: :post do %>
  <div>
    <%= text_field_tag :text, "", class: 'u-footer-form__input', placeholder: 'enter your text here' %>
  </div>
  <div>
    <%= text_field_tag :address, "", class: 'u-footer-form__input', placeholder: 'enter an address here' %>
  </div>
  <div>
    <%= text_field_tag :image, @post && @post.images.first ? @post.images.first.url : "", class: 'u-footer-form__input', placeholder: 'link an image here' %>
  </div>
  <div>
    <%= select_tag :tag_ids, options_from_collection_for_select(Tag.all, :id, :name), multiple: true %>
  </div>
  <div class="wpc-contactUs-button">
    <button class="u-footer-form__btn u-btn u-btn--small u-btn--grey u-btn--hover-grey">submit</button>
  </div>
<br>
<br>
<br>
  <div class="wpc-contactUs-button">
    <a href='/posts'>back to all posts</a>
  </div>

</form>
</div>

<% end %>