<div class="wpc-contactUs-form wpc-contactUs-form-style3">
  <div class="row">
    <div class="col-xs-12">
      <h1>create a post!</h1>
    </div>
  </div>

<%= form_tag '/posts', method: :post do %>
  <div>
    <%= text_field_tag :text, "", class: 'u-footer-form__input', placeholder: 'enter your text here' %>
  </div>
  <div>
    <%= text_field_tag :address, "", class: 'u-footer-form__input', placeholder: 'enter an address here' %>
  </div>
  <div>
    <%= text_field_tag :photo, "", class: 'u-footer-form__input', placeholder: 'upload an image here' %>
  </div>
  <div>
    <%= check_box_tag :tag_ids, options_from_collection_for_select(Tag.all, :id, :name), multiple: true %>
  </div>
  <div class="wpc-contactUs-button">
    <button class="u-footer-form__btn u-btn u-btn--small u-btn--grey u-btn--hover-grey">submit</button>
  </div>
</form>
</div>

<% end %>