<h1>Edit Post</h1>
<%= form_tag "/posts/#{@post.id}", method: :patch do %>
  <div class="form-group">
    <%= label_tag :title %>
    <%= text_field_tag :title, @post.title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :text %>
    <%= text_field_tag :text, @post.text, class: 'form-control' %>
  </div>
  <%= submit_tag "Edit post", class: "btn btn-primary" %>
<% end %>