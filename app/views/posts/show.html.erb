<div class="wpc-contactUs-form wpc-contactUs-form-style3">
  <div class="row">
    <div class="col-xs-12">
      <h1><%= @post.text%></h1>
      <h2>Address: <%= @post.address%></h2>
  
  <br>
  
  <p>Tags:
    <% @post.tags.each do |tag| %>
      <a href="/posts?tag=<%= tag.name %>"><%= tag.name %></a>  
    <% end %>
  </p>
  
  <br>
  
  <p>Image:
    <% @post.images.each do |image| %>
    <img src="<%= image.url %>" alt="no image for this post">
    <% end %>
  </p>

<h2>Comments</h2>
<%= render @post.comments %>
 
<h2>Add a comment:</h2>
<%= render "comments/form" %>
 
<br> 
  <div class="wpc-contactUs-button">
    <a href='/posts'>back to all posts</a>
  </div>
  <div>
  <%= link_to "edit post", "/posts/#{@post.id}/edit" %>
  </div>
  <div>
  <%= link_to "delete post", "/posts/#{@post.id}", method: :delete %>
  </div>

    </div> 
  </div>
</div>