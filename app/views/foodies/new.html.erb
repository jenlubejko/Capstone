<div class="wpc-contactUs-form wpc-contactUs-form-style3">
  <div class="row">
    <div class="col-xs-12">
      <h1>signup!</h1>
    </div>
  </div>

<%= form_tag '/foodies', method: :post do  %>
  <div>
    <%= text_field_tag :name, "", class: 'u-footer-form__input', placeholder: 'enter your name here' %>
  </div>
  <div>
    <%= text_field_tag :email, "", class: 'u-footer-form__input', placeholder: 'enter your email address here' %>
  </div>
  <div>
    <%= password_field_tag(:password, "", class: "u-footer-form__input", placeholder: "create a password here") %>
  </div>
  <div>
    <%= password_field_tag(:password_confirmation, "", class: "u-footer-form__input", placeholder: "confirm your password here") %>
  </div>
  <div class="wpc-contactUs-button">
    <button class="u-footer-form__btn u-btn u-btn--small u-btn--grey u-btn--hover-grey">submit</button>
  </div>
</form>
</div>

<% end %>