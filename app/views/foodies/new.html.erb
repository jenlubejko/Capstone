<div class="wpc-contactUs-form wpc-contactUs-form-style3">
  <div class="row">
    <div class="col-xs-12">
      <h1>signup!</h1>
    </div>
  </div>

<%= form_for @foodie, url: '/foodies', html: { multipart: true}, method: :post do |f| %>
  <div>
    <%= f.text_field :name, class: 'u-footer-form__input', placeholder: 'enter your name here' %>
  </div>
  <div>
    <%= f.text_field :email, class: 'u-footer-form__input', placeholder: 'enter your email address here' %>
  </div>
  <div>
    <%= f.password_field :password, class: "u-footer-form__input", placeholder: "create a password here" %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, class: "u-footer-form__input", placeholder: "confirm your password here" %>
  </div>
    <div>
    <%= f.file_field :avatar %>
  </div>
  <div class="wpc-contactUs-button">
    <%= f.submit "Submit", class: "u-footer-form__btn u-btn u-btn--small u-btn--grey u-btn--hover-grey" %>
  </div>
<% end %>
</div>